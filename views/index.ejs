<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw]  bg-white px-4 py-5 rounded-[30px]">
    <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none ">Welcome to pinterest.</h1>
    <form action="/login" method="post">
      <input class=" border-2 rounded-md mt-2 w-full px-3 py-2"  type="text" name="username" placeholder="username">
      <input class=" border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password? </a>
      <input class=" border-2 rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full " type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of 
        Service; Opens a new tab and 
        acknowledge you've read our Privacy Policy notice at collection
      </p>
    </form>
    <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Dont have an account?</a>
  </div>
</div>
<% include ./partials/footer.ejs %>